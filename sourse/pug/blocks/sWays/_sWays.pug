mixin sWays()
	// start sWays
	+b.SECTION.sWays.section.bg-light#sWays&attributes(attributes)
		.container
			mixin direction(i, t1, t2, tel1, tel2, l, ...items)
				+b.direction
					+e.IMG.image-bg(src=`img/@2x/ways-${i}.jpg`)
					.row.row-0
						.col-lg-6
							+e.heading
								h2!= t1 
								+e.UL.activities
									each item in items
										LI!= item
						.col-lg-6
							+e.content
								H6!= t2
								block
								.row
									.col-md-6
										+b.A.main-btn(href=`${l}`) Подробнее
									.col
										+e.contacts
											+e.A.link(href=`tel:${tel1}`)
												+icon("phone")
												span!= tel2
											+e.A.link(href="mailto:event@ruvents.com") 
												+icon("email")
												span event@ruvents.com


			+direction(1, `Онлайн сервисы`, `Комплексный набор настраиваемых решений для проведения мероприятия в&nbsp;онлайн-формате`, `8(495)1090200p1`, `+7&nbsp;495 109-02-00&nbsp;доб.&nbsp;1`, `http://online.ruvents.com/`, `Сайты`, `Онлайн платформа для мероприятий`, `Информационные системы`)
				+e.UL.services
					LI &minus;&nbsp;Информационные системы.
					LI &minus;&nbsp;Разработка сайтов.
					LI &minus;&nbsp;Личный кабинет и&nbsp;live-сервисы.
					LI &minus;&nbsp;Интерактивные 3D-модели мероприятия.
					LI &minus;&nbsp;Онлайн-трансляция и&nbsp;перевод.
					LI &minus;&nbsp;Мобильные приложения.
					LI &minus;&nbsp;Регистрация участников.
					LI &minus;&nbsp;Цифровые сертификаты и&nbsp;дипломы.
					LI &minus;&nbsp;Дизайн.
				
			+direction(2, `Офлайн сервисы`, `Организация комплекса услуг быстрой и&nbsp;профессиональной регистрации/аккредитации участников и&nbsp;посетителей в&nbsp;месте проведения вашего мероприятия.`, `8(495)1090200p2`, `+7&nbsp;495 109-02-00&nbsp;доб.&nbsp;2`, `https://accred.ruvents.com/`, `Регистрация`, `Контроль доступа`, `Интерактивные сервисы`)
				+e.subtitle Основные услуги:
				+e.UL.services
					LI &minus;&nbsp;Аренда оборудования с&nbsp;программным обеспечением.
					LI &minus;&nbsp;Организация работы персонала.
					LI &minus;&nbsp;Производство расходных материалов.
				+e.subtitle Дополнительные услуги:
				+e.UL.services
					LI &minus;&nbsp;Контроль доступа.
					LI &minus;&nbsp;Интерактивные стенды.
					LI &minus;&nbsp;Онлайн система сбора персональных данных.
					LI &minus;&nbsp;Электронные визитницы.
					LI &minus;&nbsp;Дизайн.
	// end sWays