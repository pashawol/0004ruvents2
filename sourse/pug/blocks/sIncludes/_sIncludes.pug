mixin sIncludes()
	// start sIncludes
	+b.SECTION.sIncludes.section#sIncludes&attributes(attributes)
		.container
			+b.section-title
				h2 Организация онлайн-мероприятия включает
				
			.row( class="wow  fadeInUp "  data-wow-delay=`${delay + .2}s` data-wow-duration=`${dur }s`   )
				mixin item(i,t)
					+e.col.col-lg-4.col-sm-6.wow.zoomIn
						+e.img-wrap
							noscript( class="loading-lazy")
								img(src=`img/svg/sIncludes-${i}.svg`  laoding="lazy", alt="")
						+e.title!= t
				+item(`1`,`Подбор платформы площадки/студии`)
				+item(`2`,`Разработка <br> сценария`)
				+item(`3`,`Подготовка графических и&nbsp;анимированных элементов`)
				+item(`4`,`Подготовка спикеров  по&nbsp;системе TED-X`)
				+item(`5`,`Полный технический прогон  и&nbsp;прогон по&nbsp;содержанию  с&nbsp;ведущими в&nbsp;кадре`)
				+item(`6`,`Эфир`)
	// end sIncludes